<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cat_nav_img"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:orientation="vertical"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="50dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:fontFamily="@font/alice"
                android:text="product price"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/deleteimg"
            android:layout_width="25dp"
            android:layout_height="37dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-7dp"
            android:src="@mipmap/ic_launcher_equis_foreground"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-210dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editicon"
                android:layout_width="82dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/blanco"
                android:layout_width="64dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_bookmark_border_24" />

            <ImageView
                android:id="@+id/negro"
                android:layout_width="64dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_bookmark_added_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/whatsappicon"
                android:layout_width="64dp"
                android:layout_height="23dp"
                android:src="@mipmap/ic_launcher_whatsapp_foreground"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginLeft="-349dp"
            android:layout_marginTop="106dp">

            <ImageView
                android:id="@+id/cat_nav_img_pago"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_baseline_payment_24" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="233dp"
                android:layout_height="43dp"
                android:layout_marginLeft="32dp"
                android:numStars="5"
                android:rating="0"
                android:scaleX=".6"
                android:scaleY=".6"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView >